<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        xmlns:conv="clr-namespace:PL"      
        mc:Ignorable="d"
        Title="CallListWindow" Height="500" Width="850"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed">

    <Window.Resources>
        <conv:CallTypeToColorConverter x:Key="CallTypeToColorConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Sort calls by:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox SelectedValue="{Binding CallSortOption, Mode=TwoWay}"
                      ItemsSource="{Binding Source={StaticResource CallSortOptionCollectionKey}}"
                      Grid.Column="1" SelectionChanged="ComboBox_SelectionChanged"/>
        </Grid>

        <DataGrid Grid.Row="1" Margin="5" ItemsSource="{Binding CallList}" SelectedItem="{Binding SelectedCall}"
                  MouseDoubleClick="dgCallList_MouseDoubleClick" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background"
                Value="{Binding CallType, Converter={StaticResource CallTypeToColorConverter}}"/>
                </Style>
            </DataGrid.RowStyle>


            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="CallId" Binding="{Binding CallId}" Width="Auto"/>
                <DataGridTextColumn Header="Type" Binding="{Binding CallType}" Width="Auto"/>
                <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime}" Width="Auto"/>
                <DataGridTextColumn Header="Rest Time For Call" Binding="{Binding RestTimeForCall}" Width="Auto"/>
                <DataGridTextColumn Header="Volunteer" Binding="{Binding LastVolunteerName}" Width="Auto"/>
                <DataGridTextColumn Header="Treatment Completion Time" Binding="{Binding TreatmentCompletionTime}" Width="Auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                <DataGridTextColumn Header="Allocations" Binding="{Binding AllocationsAmount}" Width="Auto"/>
                <DataGridTemplateColumn Header="Delete">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🗑 Delete" Click="DeleteCall_Click" PreviewMouseDown="Button_PreviewMouseDown" ToolTip="Delete Call"
                                    Visibility="{Binding AllocationsAmount }"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Add Call" HorizontalAlignment="Center" Height="50" Width="100" Click="btnAddCall_Click"/>
    </Grid>
</Window>
