        <Window x:Class="PL.Volunteer.VolunteerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL.Volunteer"
        Title="Volunteer Dashboard" Height="600" Width="900"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
            <Window.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            </Window.Resources>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Volunteer Details -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Volunteer Details" FontSize="18" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name: "/>
                        <TextBox Text="{Binding FullName, Mode=TwoWay}" Width="150"/>
                        <TextBlock Text="Phone: "/>
                        <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}" Width="120"/>
                        <TextBlock Text="Email: "/>
                        <TextBox Text="{Binding Email, Mode=TwoWay}" Width="180"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Address: "/>
                        <TextBox Text="{Binding CurrentFullAddress, Mode=TwoWay}" Width="300"/>
                        <TextBlock Text="Max Distance: "/>
                        <TextBox Text="{Binding MaxDistanceForCall, Mode=TwoWay}" Width="50"/>
                        <TextBlock Text="Distance Type: "/>
                        <ComboBox ItemsSource="{Binding DistanceTypeOptions}"
                          SelectedItem="{Binding DistanceType, Mode=TwoWay}" Width="100"/>
                    </StackPanel>

                    <!--<CheckBox Content="Is Active" IsChecked="{Binding IsActive, Mode=TwoWay}"
                      IsEnabled="{Binding CanDeactivate}"/>-->
                </StackPanel>

                <!-- Current Call Panel -->
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Current Call In Treatment" FontSize="16" FontWeight="Bold"/>

                        <StackPanel Visibility="{Binding HasCurrentCall, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="{Binding CurrentCall.Description}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CurrentCall.FullAddress}"/>
                            <TextBlock Text="{Binding CurrentCall.DistanceFromVolunteer, StringFormat='Distance: {0} km'}"/>
                            <TextBlock Text="{Binding CurrentCall.Status}"/>

                            <!-- Map Placeholder -->
                            <TextBlock Text="📍 Map of Volunteer and Call Location Goes Here" Foreground="DarkGray"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Finish Treatment" Margin="5"
                                Click="FinishTreatment_Click"/>
                                <Button Content="Cancel Treatment" Margin="5"
                                Click="CancelTreatment_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Content="Choose Call"
                        Click="ChooseCall_Click"
                        Visibility="{Binding ShowChooseCallButton, Converter={StaticResource BoolToVisibility}}"
                        HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Update Button -->
                <Button Content="Update Details" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10" Click="UpdateVolunteer_Click"/>

        <!-- Show calls history Button -->
        <Button Content="show my calls history" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100" 
                Click="btnShowVolunteerCallsHistory_Click"/>

    </Grid>
        </Window>

