<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:PL.Volunteer"
        xmlns:pl="clr-namespace:PL"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Details" Height="600" Width="500"
         DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <!-- General formatting for field names -->
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Row per attribute + row per button -->
            <RowDefinition Height="*"/>
            <!-- Scroll -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <!-- 14 תכונות מוצגות -->
                    <RowDefinition Height="Auto" />
                    <!-- FullName -->
                    <RowDefinition Height="Auto" />
                    <!-- PhoneNumber -->
                    <RowDefinition Height="Auto" />
                    <!-- Email -->
                    <RowDefinition Height="Auto" />
                    <!-- Password -->
                    <RowDefinition Height="Auto" />
                    <!-- Address -->
                    <RowDefinition Height="Auto" />
                    <!-- Latitude -->
                    <RowDefinition Height="Auto" />
                    <!-- Longitude -->
                    <RowDefinition Height="Auto" />
                    <!-- Role -->
                    <RowDefinition Height="Auto" />
                    <!-- IsActive -->
                    <RowDefinition Height="Auto" />
                    <!-- MaxDistance -->
                    <RowDefinition Height="Auto" />
                    <!-- DistanceType -->
                    <RowDefinition Height="Auto" />
                    <!-- Completed -->
                    <RowDefinition Height="Auto" />
                    <!-- Cancelled -->
                    <RowDefinition Height="Auto" />
                    <!-- Expired -->
                </Grid.RowDefinitions>

                <!-- Labels + Controls -->
                <Label Content="Full Name" Grid.Row="0" Grid.Column="0"/>
                <TextBox Grid.Row="2" Grid.Column="1" />

                <TextBox Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay }" Grid.Row="0" Grid.Column="1"/>

                <Label Content="Phone Number" Grid.Row="1"/>
                <TextBox Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay }" Grid.Row="1" Grid.Column="1"/>

                <Label Content="Email" Grid.Row="2"/>
                <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

                <Label Content="Password" Grid.Row="3"/>
                <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>

                <Label Content="Address" Grid.Row="4"/>
                <TextBox Text="{Binding CurrentVolunteer.CurrentFullAddress, Mode=TwoWay}" Grid.Row="4" Grid.Column="1"/>

                <Label Content="Latitude" Grid.Row="5"/>
                <TextBox Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay}" Grid.Row="5" Grid.Column="1"/>

                <Label Content="Longitude" Grid.Row="6"/>
                <TextBox Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay}" Grid.Row="6" Grid.Column="1"/>

                <Label Content="Role" Grid.Row="7"/>
                <ComboBox ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}" SelectedItem="{Binding Role}" Grid.Row="7" Grid.Column="1"/>

                <Label Content="Is Active" Grid.Row="8"/>
               <CheckBox IsChecked="{Binding Path=CurrentVolunteer.IsActive, Mode=TwoWay}" Grid.Row="8" Grid.Column="1"/>
             
                <Label Content="Max Distance" Grid.Row="9"/>
                <TextBox Text="{Binding CurrentVolunteer.MaxDistanceForCall, Mode=TwoWay}" Grid.Row="9" Grid.Column="1"/>

                <Label Content="Distance Type" Grid.Row="10"/>
                <ComboBox   Grid.Row="10" Grid.Column="1" ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}" 
                SelectedValue="{Binding DistanceType , Mode=TwoWay}" />

                <Label Content="Completed Calls" Grid.Row="11"/>
                <TextBox Text="{Binding CurrentVolunteer.AmountOfCompletedCalls, Mode=TwoWay}" Grid.Row="11" Grid.Column="1"/>

                <Label Content="Self Cancelled" Grid.Row="12"/>
                <TextBox Text="{Binding CurrentVolunteer.AmountOfSelfCancelledCalls, Mode=TwoWay}" Grid.Row="12" Grid.Column="1"/>

                <Label Content="Expired Calls" Grid.Row="13"/>
                <TextBox Text="{Binding CurrentVolunteer.AmountOfExpiredCalls, Mode=TwoWay}" Grid.Row="13" Grid.Column="1"/>
                
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="1" Content="{Binding ButtonText}" Click="btnAddUpdate_Click" HorizontalAlignment="Center" Width="100" Height="20"/>
    </Grid>
</Window>
