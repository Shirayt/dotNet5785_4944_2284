<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Login" Height="250" Width="400"
        WindowStartupLocation="Manual" 
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- User ID -->
        <TextBlock Text="User ID:" VerticalAlignment="Center" Margin="0,0,10,10" Grid.Row="0" Grid.Column="0"/>
        <TextBox Width="200" Height="30" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" VerticalContentAlignment="Center" Text="{Binding UserId}"/>

        <!-- Password -->
        <TextBlock Text="Password:" VerticalAlignment="Center" Margin="0,0,10,10" Grid.Row="1" Grid.Column="0"/>
        <TextBox Width="200" Height="30" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"  VerticalContentAlignment="Center" Text="{Binding Password}"/>

        <!-- Login Button -->
        <Button Content="Login" Width="100" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,10,0,10" Click="LoginButton_Click"/>

        <!-- Error Message -->
        <TextBlock Foreground="Red" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="{Binding ErrorMessage}"/>
    </Grid>
</Window>
