<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call Details" Height="600" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Id" Grid.Row="0" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.Id}" Grid.Row="0" Grid.Column="1"/>

                <Label Content="Type" Grid.Row="1" Grid.Column="0"/>
                <!--<ComboBox ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}"
                          SelectedItem="{Binding CurrentCall.CallType}" Grid.Row="1" Grid.Column="1"/>-->

                <Label Content="Description" Grid.Row="2" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.Description, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

                <Label Content="Address" Grid.Row="3" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.FullAddress, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>

                <Label Content="Latitude" Grid.Row="4" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.Latitude, Mode=TwoWay}" Grid.Row="4" Grid.Column="1"/>

                <Label Content="Longitude" Grid.Row="5" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.Longitude, Mode=TwoWay}" Grid.Row="5" Grid.Column="1"/>

                <Label Content="Open Time" Grid.Row="6" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.OpenTime, Mode=TwoWay}" Grid.Row="6" Grid.Column="1"/>

                <Label Content="Max End Time" Grid.Row="7" Grid.Column="0"/>
                <TextBox Text="{Binding CurrentCall.MaxEndTime, Mode=TwoWay}" Grid.Row="7" Grid.Column="1"/>

                <Label Content="Status" Grid.Row="8" Grid.Column="0"/>
                <!--<ComboBox ItemsSource="{Binding Source={StaticResource CallStatusCollectionKey}}"
                          SelectedItem="{Binding CurrentCall.Status}" Grid.Row="8" Grid.Column="1"/>-->
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="1" Content="{Binding ButtonText}" Click="btnAddUpdate_Click"
                HorizontalAlignment="Center" Width="100" Height="30"/>
    </Grid>
</Window>
