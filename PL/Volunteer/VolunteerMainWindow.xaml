<Window x:Class="PL.Volunteer.VolunteerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL.Volunteer"
        xmlns:pl="clr-namespace:PL"
        Title="Volunteer Dashboard" Height="800" Width="920"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="VolunteerMainWindow_Loaded" Closed="VolunteerMainWindow_Closed">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="MiniGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.60" ScaleY="0.60"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Volunteer Full Details Compact Grid -->
            <GroupBox Header="Update My Details" FontSize="14" FontWeight="Bold" Margin="0 0 0 10" Style="{StaticResource MiniGroupBoxStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Id" Grid.Row="0" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.Id}" Grid.Row="0" Grid.Column="1"/>

                    <Label Content="Full Name" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.FullName, Mode=TwoWay}" Grid.Row="1" Grid.Column="1"/>

                    <Label Content="Phone Number" Grid.Row="2" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.PhoneNumber, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

                    <Label Content="Email" Grid.Row="3" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.Email, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>

                    <Label Content="Password" Grid.Row="4" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.Password, Mode=TwoWay}" Grid.Row="4" Grid.Column="1"/>

                    <Label Content="Address" Grid.Row="5" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.CurrentFullAddress, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" TextChanged="TextBox_TextChanged"/>

                    <Label Content="Latitude" Grid.Row="6" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.Latitude, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" IsReadOnly="True"/>

                    <Label Content="Longitude" Grid.Row="7" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.Longitude, Mode=TwoWay}" Grid.Row="7" Grid.Column="1" IsReadOnly="True"/>

                    <Label Content="Role" Grid.Row="8" Grid.Column="0"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}"
                              SelectedItem="{Binding Volunteer.Role}" Grid.Row="8" Grid.Column="1"/>

                    <Label Content="Is Active" Grid.Row="9" Grid.Column="0"/>
                    <CheckBox IsChecked="{Binding Volunteer.IsActive, Mode=TwoWay}" Grid.Row="9" Grid.Column="1"/>

                    <Label Content="Max Distance" Grid.Row="10" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.MaxDistanceForCall, Mode=TwoWay}" Grid.Row="10" Grid.Column="1"/>

                    <Label Content="Distance Type" Grid.Row="11" Grid.Column="0"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}"
                              SelectedItem="{Binding Volunteer.DistanceType, Mode=TwoWay}" Grid.Row="11" Grid.Column="1"/>

                    <Label Content="Completed Calls" Grid.Row="12" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.AmountOfCompletedCalls}" IsReadOnly="True" Grid.Row="12" Grid.Column="1"/>

                    <Label Content="Self Cancelled" Grid.Row="13" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.AmountOfSelfCancelledCalls}" IsReadOnly="True" Grid.Row="13" Grid.Column="1"/>

                    <Label Content="Expired Calls" Grid.Row="14" Grid.Column="0"/>
                    <TextBox Text="{Binding Volunteer.AmountOfExpiredCalls}" IsReadOnly="True" Grid.Row="14" Grid.Column="1"/>
                </Grid>
            </GroupBox>

            <!-- Current Call In Progress -->
            <GroupBox Header="Current Call In Treatment" FontSize="16" FontWeight="Bold"
                      Visibility="{Binding HasCallInProgress, Converter={StaticResource BoolToVisibility}}" Margin="0 0 0 10">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding CallInProgress.Description}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding CallInProgress.FullAddress}"/>
                    <TextBlock Text="{Binding CallInProgress.Status}"/>
                    <TextBlock Text="{Binding CallInProgress.DistanceFromVolunteer, StringFormat='Distance: {0} km'}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                        <Button Content="Finish Treatment" Margin="5" Click="FinishTreatment_Click"/>
                        <Button Content="Cancel Treatment" Margin="5" Click="CancelTreatment_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Choose Call if none in progress -->
            <Button Content="Choose Call for Treatment" Click="ChooseCall_Click" Width="200"
                    Visibility="{Binding ShowChooseCallButton, Converter={StaticResource BoolToVisibility}}" Margin="0 0 0 20"/>

            <!-- Map Placeholder -->
            <!--<GroupBox Header="Map View" Margin="0 0 0 20" Height="300">
                <Grid>
                    <wv2:WebView2 x:Name="GoogleMapWebView" Height="300" Margin="10"/>
                </Grid>
            </GroupBox>-->

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Update My Details" Click="UpdateVolunteer_Click" Width="150" Margin="10"/>
                <Button Content="My Call History" Click="btnShowVolunteerCallsHistory_Click" Width="150" Margin="10"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
